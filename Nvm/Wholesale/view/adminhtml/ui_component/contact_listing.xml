<?xml version="1.0" encoding="UTF-8"?>

<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">contact_listing.contact_listing_data_source</item>
        </item>
    </argument>
    <settings>
        <spinner>contact_columns</spinner>
        <deps>
            <dep>contact_listing.contact_listing_data_source</dep>
        </deps>
    </settings>
    <dataSource name="contact_listing_data_source" component="Magento_Ui/js/grid/provider">
        <settings>
            <storageConfig>
                <param name="indexField" xsi:type="string">contact_id</param>
            </storageConfig>
            <updateUrl path="mui/index/render"/>
        </settings>
        <dataProvider class="Nvm\Wholesale\Ui\DataProvider\Contact\DataProvider"
                      name="contact_listing_data_source">
            <settings>
                <requestFieldName>contact_id</requestFieldName>
                <primaryFieldName>contact_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <listingToolbar name="listing_top">
        <settings>
            <sticky>true</sticky>
        </settings>
        <columnsControls name="columns_controls"/>
        <filters name="listing_filters"/>
        <paging name="listing_paging"/>
    </listingToolbar>
    <columns name="contact_columns">
        <column name="contact_id" sortOrder="5">
            <settings>
                <filter>textRange</filter>
                <label translate="true">Id</label>
                <sorting>asc</sorting>
                <resizeEnabled>true</resizeEnabled>
            </settings>
        </column>
        <column name="customer_name" sortOrder="15">
            <settings>
                <filter>text</filter>
                <label translate="true">Customer Name</label>
            </settings>
        </column>
        <column name="customer_email" sortOrder="20">
            <settings>
                <label translate="true">Customer Email</label>
                <visible>true</visible>
            </settings>
        </column>
        <column name="product_name" sortOrder="25">
            <settings>
                <label translate="true">Product Name</label>
            </settings>
        </column>
        <column name="customer_phone" sortOrder="30">
            <settings>
                <label translate="true">Phone</label>
            </settings>
        </column>
        <column name="customer_message" sortOrder="35">
            <settings>
                <filter>text</filter>
                <label translate="true">Message</label>
            </settings>
        </column>
        <column name="editor" sortOrder="40">
            <settings>
                <filter>text</filter>
                <label translate="true">Sent By Username</label>
            </settings>
        </column>
        <column name="admin_message" sortOrder="41">
            <settings>
                <filter>text</filter>
                <label translate="true">Message By Seller</label>
            </settings>
        </column>
        <column name="status" component="Mageplaza_Smtp/js/grid/columns/status" sortOrder="45">
            <settings>
                <options>
                    <option name="inactive" xsi:type="array">
                        <item name="value" xsi:type="string">0</item>
                        <item name="label" xsi:type="string" translate="true">Unsent</item>
                    </option>
                    <option name="active" xsi:type="array">
                        <item name="value" xsi:type="string">1</item>
                        <item name="label" xsi:type="string" translate="true">Sent</item>
                    </option>
                </options>
                <filter>select</filter>
                <dataType>select</dataType>
                <label translate="true">Status</label>
            </settings>
        </column>
        <column name="updated_at" sortOrder="50">
            <settings>
                <filter>text</filter>
                <label translate="true">Updated At</label>
            </settings>
        </column>
        <actionsColumn name="actions" class="Nvm\Wholesale\Ui\Component\Listing\Column\ContactActions">
            <settings>
                <indexField>contact_id</indexField>
                <resizeEnabled>false</resizeEnabled>
                <resizeDefaultWidth>107</resizeDefaultWidth>
            </settings>
        </actionsColumn>
    </columns>
</listing>


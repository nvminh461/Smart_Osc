$customerData  = $block->getCustomerData();
?>
<script>
    window.AVADA_EM                   = window.AVADA_EM || {};
    window.AVADA_EM_PUSH_ENABLED      = Boolean(<?= /* @noEscape */ $block->getHelperEmailMarketing()->isPushNotification() ?>);
    window.AVADA_EM.shopId            = "<?= /* @noEscape */ $shopId ?>";
